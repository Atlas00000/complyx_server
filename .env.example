# Server Environment Variables
# Copy this file to .env and fill in your values

# Database - PostgreSQL connection string
# For local dev with Docker: postgresql://postgres:postgres@localhost:5432/ifrsbot
# For Railway production: provided by Railway
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ifrsbot

# Redis connection string
# For local dev with Docker: redis://localhost:6379
# For Railway production: provided by Railway
REDIS_URL=redis://localhost:6379

# AI Provider Configuration
# Options: gemini (default), grok, openai
AI_PROVIDER=gemini

# Google Gemini API Key (Default - Free tier available)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Grok API Key (Optional - for future use)
# Get your key at: https://x.ai/ or https://console.x.ai/
GROK_API_KEY=

# OpenAI API Key (Optional - for future use)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Cloudflare R2 Configuration
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=

# JWT Secret for authentication
JWT_SECRET=
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@complyx.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SENDGRID_API_KEY=

# Application URLs
APP_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Server Port
PORT=3001

# Vector Database Configuration
# Options: memory (default for dev), pinecone, weaviate
VECTOR_DB_TYPE=memory
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=complyx-knowledge
EMBEDDING_DIMENSION=768

# Node Environment
NODE_ENV=development
